<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), wrapper_mappings: {
    check_boxes: :vertical_radio_and_checkboxes
  }) do |f| %>
  <div class="form-inputs">
    <%= f.input :email, required: false, autofocus: true %>
    <%= f.input :password, required: false %>
    <%= f.input :remember_me, as: :boolean, wrapper: :vertical_radio_and_checkboxes if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, t('devise.sessions.new.sign_in') %>
  </div>
<% end %>

<hr />

<%= render "devise/shared/links" %>
