<% title @article.translated_title -%>
<% navi "Translation" -%>

<div class='alert alert-info'>
  <div class="pull-right">
    <button class="btn btn-default" data-toggle="modal" data-target="#logModal"><%= t 'translations.changelog' -%></button>
    <% if user_signed_in? -%>
      <% if current_user.collected? @article -%>
	<button type="button" class="btn btn-default active"><%= t 'collections.collected' %></button>
      <% else -%>
	<%= link_to t('collections.collect'), article_collections_path(@article), class: "btn btn-default", method: :post -%>
      <% end -%>
    <% else -%>
      <%= link_to t('collections.collect'), article_collections_path(@article), class: "btn btn-default", method: :post -%>
    <% end -%>

  </div>

  <h3><%= @article.title -%></h3>
  <h4><%= @article.translated_title -%></h4>
  <p>
    <%= t Article.human_attribute_name(:original_link) %>: <%= @article.original_link -%><br />
    <%= t Article.human_attribute_name(:source) %>: <%= @article.source -%>,
    <%= t Article.human_attribute_name(:target) %>: <%= @article.target -%>.
  </p>
  <p>
    <%= simple_format @article.brief %>
  </p>

  <p>
    <%= social_share_button_tag(@article.title) %>
  </p>

  <!-- Log Modal -->
  <div class="modal fade" id="logModal" tabindex="-1" role="dialog" aria-labelledby="logModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
	<div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
          <h4 class="modal-title" id="logModalLabel"><%= t 'translations.changelog' -%></h4>
	</div>
	<div class="modal-body">
	  <% @translation.versions.each do |v| -%>
	    <%= link_to "Diff", article_path(@article) + "/?v=#{version_short(v)}&diff=1" %>&nbsp;&nbsp;|&nbsp;
	    <%= link_to version_info(v), article_path(@article) + "/?v=#{version_short(v)}" %>
	    <br />
	  <% end -%>
	</div>
	<div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
	</div>
      </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
  </div><!-- /.log modal -->
</div>

<div class="row">

  <% if params[:diff] == '1' -%>
    <div class="col-md-12">
      <div class="panel panel-info">
	<div class="panel-body">
	  <%= simple_format @translation.diff -%>
	</div>
      </div>
    </div>
  <% end -%>

  <div class="col-md-6 origin">
    <div class="panel panel-info">
      <div class="panel-heading">
	<%= t 'articles.origin_text' -%>
	<button type="button" class="hidden-origin pull-right btn btn-default btn-xs"><%= t 'articles.hidden_origin' %></button>
      </div>
      <div class="panel-body">
	<%= simple_form_for @article do |f| %>
	  <%= f.input :text, input_html: {class: 'origin-text', rows: 30}, label: false %>
	<% end %>
      </div>
    </div>
  </div>

  <div class="col-md-6 translation">
    <div class="panel panel-primary">
      <div class="panel-heading">
	<%= t 'articles.translation' %>
	<button type="button" class="show-origin pull-right btn btn-default btn-xs"><%= t 'articles.show_origin' %></button>
      </div>
      <div class="panel-body">
	<%= render "translations/form", locals: { translation: @translation } -%>
      </div>
    </div>
  </div>

  <% if current_user == @article.user -%>
    <div class="col-md-12">
      <%= link_to 'Edit', edit_article_path(@article) %>
    </div>
  <% end -%>
</div>
