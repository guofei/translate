<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @article.title %>
</p>

<p>
  <strong>Brief:</strong>
  <%= @article.brief %>
</p>

<p>
  <strong>Text:</strong>
  <%= @article.text %>
</p>

<p>
<%= simple_form_for Translation.new(article_id: @article.id) do |f| %>
