<% title @article.title -%>
<% navi "Translation" -%>

<div class='alert alert-info'>
  <h3>
    <%= @article.title -%>
  </h3>

  <p>
    Source Language: <%= @article.source -%>,
    Target Language: <%= @article.target -%>.
    <button class="btn btn-info" data-toggle="modal" data-target="#logModal">Change Log</button>
  </p>

  <p><%= simple_format @article.brief %></p>

  <!-- Log Modal -->
  <div class="modal fade" id="logModal" tabindex="-1" role="dialog" aria-labelledby="logModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
	<div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
          <h4 class="modal-title" id="logModalLabel">Change Log</h4>
	</div>
	<div class="modal-body">
	  <% @translation.versions.each do |v| -%>
	    <%= link_to version_info(v), article_path(@article) + "/?v=#{v.id}" %>
	    <br />
	  <% end -%>
	</div>
	<div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
	</div>
      </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
  </div><!-- /.log modal -->
</div>

<div class="row">

  <div class="col-md-6 origin">
    <div class="panel panel-info">
      <div class="panel-heading">
	Origin Text
	<%= link_to "Hidden", "javascript:void(0)", class: "hidden-origin pull-right" -%>
      </div>
      <div class="panel-body">

	<div class="origin-text">
	  <%= simple_format @article.text %>
	</div>

      </div>
    </div>
  </div>

  <div class="col-md-6 translation">
    <div class="panel panel-primary">
      <div class="panel-heading">
	Tranlation
	<%= link_to "Show Origin Text", "javascript:void(0)", class: "show-origin pull-right btn btn-default btn-xs" -%>
      </div>
      <div class="panel-body">
	<%= render "translations/form", locals: { translation: @translation } -%>
      </div>
    </div>
  </div>

  <% if current_user == @article.user -%>
    <div class="col-md-12">
      <%= link_to 'Edit', edit_article_path(@article) %>
    </div>
  <% end -%>
</div>
